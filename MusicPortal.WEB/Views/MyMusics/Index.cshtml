@model ICollection<MusicPortal.WEB.Models.ViewModels.MyMusicVM>

<main>
    <div class="container">
        <h2>Мой плейлист</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Жанр</th>
                    <th>Дата релиза</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a asp-area="" asp-controller="Home" asp-action="MusicPage" asp-route-Id="@item.Musics.Id">@item.Musics.Name</a></td>
                        <td>@item.Musics.Genre</td>
                        <td>@item.Musics.Date</td>
                        <td><div class="audio-player">
                            <audio id="audio-player" src="@wc.MusicPath@item.Musics.filesMusic" type="audio/mp3" controls="controls"></audio>
                        </div></td>
                        <td>
                            <a asp-action="DeleteMyMusic" asp-route-Id="@item.Musics.Id" class="btn btn-danger form-control btn-sm p-2">
                                Удалить
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
@section Scripts{
        <script>
            $(document).ready(function () {
                $('#audio-player').mediaelementplayer({
                    alwaysShowControls: true,
                    features: ['playpause', 'volume', 'progress'],
                    audioVolume: 'horizontal',
                    audioWidth: 400,
                    audioHeight: 120
                });
            });
        </script>
}
